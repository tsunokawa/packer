    "provisioners":[{
      "type": "shell",
      "scripts": [
        "base.sh"
        ]
    }],
    "post-processors": [
    {
      "type": "vagrant",
      "output": "./CentOS-7.2.1511-x86_64-ja.box"
    }
  ]
}

